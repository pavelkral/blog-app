
<% include setup-header %>
<div class="container">  
<div class="row">
<div class="panel panel-default">
<div class="panel-heading"><strong>Projects</strong></div>
<div class="panel-body">
<a href="#" class="btn btn-primary btn-xs"><i class="glyphicon glyphicon-plus"></i> Add Project</a>
  <div class="table-responsive" style="margin-top:5px;">          
    <table class="table">
      <thead>
        <tr>
          <th>#id</th>
          <th>Name</th>
          <th>Date</th>
          <th>UserId</th>
          <th>UserId</th>
          <th class="text-center">UserId</th>
        </tr>
      </thead>
      <tbody>
          <% for (var index in projects){ %>
           <tr>
              <td><%= projects[index].pro_id %></td>
              <td><%= projects[index].pro_name.toString().substring(0,40) %></td>
              <td><%= projects[index].pro_datestart.toString().substring(0,15) %></td>
              <td><%= projects[index].pro_leader_id %></td>
              <td><%= projects[index].pro_leader_id %></td>
              <td class="text-center">
                 <a class="btn btn-warning btn-xs" href=""><i class="glyphicon glyphicon-wrench"></i> Edit</a>
                <form method="POST" action="" accept-charset="UTF-8" style="display:inline">
                <button class="btn btn-xs btn-danger" type="button" data-toggle="modal" data-target="#confirmDelete" data-title="Delete Article" data-message="Are you sure you want to delete this  ?">
                <i class="glyphicon glyphicon-trash"></i> Delete
                </button>
                </form>  
              </td>
           </tr>
          <% }; %>
      </tbody>
    </table>
  </div>
</div>    
</div>
</div>
</div>

<% include setup-footer %>
